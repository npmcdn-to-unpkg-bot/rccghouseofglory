<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<div class="tease-thumbnail">
			{% if post.get_thumbnail %}
				<img src="{{post.thumbnail.src}}" />
			{% endif %}
		</div>
		<header class="tease-header">
			<h2 class="h2 tease-title"><a href="{{post.link}}">{{post.title}}</a></h2>
		</header>
		<div class="tease-meta">
			<div class="inline-block tease-author">
				<i class="fa fa-user"></i> By {{post.author}}
			</div>
			<div class="inline-block tease-cat categories-links">
				<i class="fa fa-folder"></i> In

				    <ul class="tag-list list-reset">
				    {% for term in post.terms() %}
				        <li><a href="{{term.link}}">{{term.name}}</a></li>
				    {% endfor %}
				    </ul>

			</div>
		</div>
		<div class="tease-content">
			<p>{{post.get_preview}}</p>
		</div>
		<!-- <div class="tease-permalink">
			<a href="{{post.link}}" class="btn btn-primary read-more">Continue Reading</a>
		</div> -->

	{% endblock %}
</article>
